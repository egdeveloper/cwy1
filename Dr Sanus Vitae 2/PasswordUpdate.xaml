<Window x:Class="SanusVitae.PasswordUpdate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сменить пароль" Height="200" Width="300">
    <Grid>
        <Label Content="Новый пароль" HorizontalAlignment="Left" Margin="24,10,0,0" VerticalAlignment="Top" />
        <Label Content="Подтвердите новый пароль " HorizontalAlignment="Left" Margin="24,64,0,0" VerticalAlignment="Top" />
        <Button x:Name="buttonOK" Content="OK" HorizontalAlignment="Left" Margin="94,138,0,0" VerticalAlignment="Top" Width="87" Click="buttonOK_Click"/>
        <PasswordBox x:Name="textboxNewPassword" HorizontalAlignment="Left" Margin="24,36,0,0" VerticalAlignment="Top" Width="240"/>
        <PasswordBox x:Name="textboxNewPasswordValidation" HorizontalAlignment="Left" Margin="24,95,0,0" VerticalAlignment="Top" Width="240"/>
        <Button x:Name="buttonCancel" Content="Отмена" HorizontalAlignment="Left" Margin="195,138,0,0" VerticalAlignment="Top" Width="87" Click="buttonCancel_Click"/>

    </Grid>
</Window>
