<Window x:Class="SanusVitae.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Секретный вопрос" Height="197" Width="456" ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="57*"/>
        </Grid.RowDefinitions>
        <Label x:Name="labelMessage" Content="{Binding}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" FontSize="14" Grid.Row="0"/>
        <TextBox x:Name="textboxAnswer" HorizontalAlignment="Stretch" Height="46" Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Row="1"/>
        <Button x:Name="buttonOK" Content="OK" HorizontalAlignment="Left" Margin="307,61,0,0"  VerticalAlignment="Top" Width="120" Height="24" Click="buttonOK_Click" Grid.Row="1"/>

    </Grid>
</Window>
